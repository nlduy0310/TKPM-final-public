        </div>
    </div>

    <!-- RECENT REVIEWS  -->
    <div class="container d-flex flex-column">
        <div class="container-title d-flex justify-content-between align-items-center">
            <h5>RECENT REVIEWS</h5>
            {{!-- <a href="#">VIEW ALL</a> --}}
        </div>
        {{#each latestReviews}}
        <div class="container review-container">
            <div class="row">
                <a href="/movies/{{movieId}}" class = "review-poster">
                    <img class="rounded"  src="{{Movie.posterUrl}}" alt="Card image cap">
                </a>
                <div class="col">
                    <div class="row">
                        <div class="col-10 p-0"><span class="review-title"><a href="/movies/{{movieId}}">{{Movie.title}}</a> <span
                                    class="review-year">{{formatTime Movie.releaseYear "YYYY"}}</span></span></div>
                        <div class="col-2">
                            {{#if pos}}
                            <span class="positive">
                                {{eval}}
                            </span>
                            {{else}}
                            <span class="negative">
                                {{eval}}
                            </span>
                            {{/if}}
                        </div>
                    </div>
                    <div class="row review-reviewer">{{User.displayName}}</div>
                    <div class="row review-content">{{{content}}}</div>
                </div>
            </div>
        </div>
        {{/each}}
        <div style="padding: 50px;">

        </div>
    </div>
</div>

