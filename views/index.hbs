        <div class="container-title d-flex justify-content-between align-items-center">
            <h5>RECOMMENDATIONS FOR YOU</h5>
            <a href="#">VIEW ALL</a>
        </div>
        <div class="slider-container">
            <div class="slider" id="slider3">
                {{#each recommendedMovies}}
                <!-- Movie -->
                <div class="movie-container slider-content bg-dark d-flex flex-column">
                    <a href="/movies/{{id}}">
                        <img class="movie-img" src="{{posterUrl}}"  alt="Card image cap">
                    </a>
                    <div>
                        <h6><a href="/movies/{{id}}" class="movie-title">{{title}}</a></h6>
                        <div class="movie-rating">
                            <div class="d-flex align-items-center justify-content-center">
                                <img width="15" height="15" src="https://img.icons8.com/fluency/48/star.png"
                                    alt="star" />
                                <span>{{score}}</span>
                            </div>

                            <div class="d-flex align-items-center justify-content-center">
                                <img width="15" height="15"
